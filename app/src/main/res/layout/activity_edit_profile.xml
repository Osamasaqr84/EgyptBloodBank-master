<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.osamasaqr.khaled.egyptbloodbank.com.osamasaqr.khaled.egyptbloodbank.Edit_profile">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView"
                tools:context="com.osamasaqr.khaled.egyptbloodbank.com.osamasaqr.khaled.egyptbloodbank.Registeration"
                android:orientation="vertical">
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/side_nav_bar"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_border"
                        android:src="@drawable/logo"
                        android:padding="10dp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text="Egypt Blood Bank"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                </LinearLayout>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="Name"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp"/>

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:inputType="phone"
                    android:layout_weight="1"
                    android:hint="Phone Number"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp"/>

                <EditText
                    android:id="@+id/uname"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:inputType="text"
                    android:layout_weight="1"
                    android:hint="E-mail"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp"/>
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:inputType="text"
                    android:layout_weight="1"
                    android:hint="password"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp"/>

                <EditText
                    android:id="@+id/re_password"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:inputType="text"
                    android:layout_weight="1"
                    android:hint="re-password"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last time to donate : "
                    android:textColor="@color/colorPrimary"
                    android:paddingBottom="10dp"
                    android:textSize="24sp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:hint="00/00/0000"
                    android:textSize="24sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/date" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City : "
                    android:textColor="@color/colorPrimary"
                    android:paddingBottom="10dp"
                    android:textSize="24sp"/>

                <Spinner
                    android:id="@+id/spinner_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:layout_margin="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Region : "
                    android:textColor="@color/colorPrimary"
                    android:paddingBottom="10dp"
                    android:textSize="24sp"/>

                <Spinner
                    android:id="@+id/spinner_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:layout_margin="5dp"
                    android:outlineProvider="bounds"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Group : "
                    android:textColor="@color/colorPrimary"
                    android:paddingBottom="10dp"
                    android:textSize="24sp"/>




                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textColor="@color/White"
                    android:background="@drawable/red_border"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="24sp"
                    android:id="@+id/register"
                    />

            </LinearLayout>
        </ScrollView>



</RelativeLayout>
