<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.osamasaqr.khaled.egyptbloodbank.com.osamasaqr.khaled.egyptbloodbank.Registeration"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            tools:context="com.osamasaqr.khaled.egyptbloodbank.com.osamasaqr.khaled.egyptbloodbank.Registeration"
            android:orientation="vertical">
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/side_nav_bar"
                android:gravity="bottom"
                android:orientation="vertical"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_border"
                    android:src="@drawable/logo"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="Egypt Blood Bank"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Name"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="phone"
                android:layout_weight="1"
                android:hint="Phone Number"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"/>
    <EditText
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="textEmailAddress"
        android:layout_weight="1"
        android:hint="E-mail"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"/>
    <EditText
    android:id="@+id/pass"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:inputType="textPassword"
    android:layout_weight="1"
    android:hint="password"
    android:textColor="@color/colorPrimary"
    android:textSize="24sp"/>
    <EditText
        android:id="@+id/repass"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="textPassword"
        android:layout_weight="1"
        android:hint="re-password"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last time to donate : "
                android:textColor="@color/colorPrimary"
                android:paddingBottom="10dp"
                android:textSize="24sp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"

                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City : "
                android:textColor="@color/colorPrimary"
                android:paddingBottom="10dp"
                android:textSize="24sp"/>

            <Spinner
                android:id="@+id/spinner_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_margin="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Region : "
                android:textColor="@color/colorPrimary"
                android:paddingBottom="10dp"
                android:textSize="24sp"/>

            <Spinner
                android:id="@+id/spinner_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_margin="5dp"
                android:outlineProvider="bounds"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Group : "
                android:textColor="@color/colorPrimary"
                android:paddingBottom="10dp"
                android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/Main_A_Plus"
            android:layout_width="0dp"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:layout_margin="3dp"
            android:textSize="26sp"
            android:text="A+"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark" />
        <TextView
            android:id="@+id/Main_A_minus"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:layout_margin="3dp"
            android:textSize="26sp"
            android:text="A-"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark" />
        <TextView
            android:id="@+id/Main_B_Plus"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:layout_margin="3dp"
            android:textSize="26sp"
            android:text="B+"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark" />
        <TextView
            android:id="@+id/Main_B_Minus"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:layout_margin="3dp"
            android:textSize="26sp"
            android:text="B-"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/Main_O_Plus"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:layout_margin="3dp"
            android:textSize="26sp"
            android:text="O+"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark" />
        <TextView
            android:id="@+id/Main_O_Minus"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:layout_margin="3dp"
            android:textSize="26sp"
            android:text="O-"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark" />
        <TextView
            android:id="@+id/Main_AB_Plus"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:layout_margin="3dp"
            android:textSize="26sp"
            android:text="AB+"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark" />
        <TextView
            android:id="@+id/Main_AB_Minus"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:layout_margin="3dp"
            android:textSize="26sp"
            android:text="AB-"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark" />
    </LinearLayout>
</LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="submit"
                android:id="@+id/register"
                android:textColor="@color/White"
                android:background="@drawable/red_border"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textSize="24sp"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
